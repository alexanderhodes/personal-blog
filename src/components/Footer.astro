---
import { Icon } from "astro-icon";
import Analytics from "./Analytics.astro";

const currentYear = new Date().getFullYear();
---

<footer>
	<Analytics />
	<div class="mb-3 mt-4">
		<div class="flex flex-row">
			<div class="basis-3/4 text-left">
				<div class="flex flex-row mb-2">
					<a class="mr-2 hover:text-green-500" href="/imprint"
						>Imprint</a
					>
					<a class="mr-2 hover:text-green-500" href="/blog">Blog</a>
					<a class="mr-2 hover:text-green-500" href="/about">About</a>
				</div>
				<div>
					&copy; {currentYear} AWESOME NAME.
				</div>
			</div>
			<div class="basis-1/4 justify-end flex flex-row">
				<a
					href="#"
					class="ml-4 hover:text-green-500"
					aria-label="Email"
					rel="noopener"
				>
					<Icon name="fa-solid:envelope" />
				</a>
				<a
					href="#"
					class="ml-4 hover:text-green-500"
					aria-label="Github"
					rel="noopener"
				>
					<Icon name="fa-brands:github" />
				</a>
			</div>
		</div>
	</div>
</footer>
<style>
	[astro-icon] {
		height: 24px;
	}
</style>
