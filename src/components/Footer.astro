---
import Analytics from "./Analytics.astro";
import FooterIcon from "./FooterIcon.astro";

const currentYear = new Date().getFullYear();
---

<footer>
  <div class="mb-3 mt-4">
    <div class="flex flex-row">
      <div class="basis-3/4 text-left">
        <div class="flex flex-row mb-2">
          <a
            class="mr-2 hover:text-green-500 dark:text-white dark:hover:text-green-500"
            href="/imprint">Imprint</a
          >
          <a
            class="mr-2 hover:text-green-500 dark:text-white dark:hover:text-green-500"
            href="/blog">Blog</a
          >
          <a
            class="mr-2 hover:text-green-500 dark:text-white dark:hover:text-green-500"
            href="/about">About</a
          >
        </div>
        <div>
          &copy; {currentYear} AWESOME NAME.
        </div>
      </div>
      <div class="basis-1/4 justify-end flex flex-row">
        <FooterIcon ariaLabel="rss" href="/rss.xml" icon="fa:feed" />
        <FooterIcon ariaLabel="email" href="#" icon="fa-solid:envelope" />
        <FooterIcon ariaLabel="github" href="#" icon="fa-brands:github" />
      </div>
    </div>
  </div>
  <script is:inline>
    window.onload = function () {
      const element = document.getElementById("social-icon-rss");

      if (element) {
        element.addEventListener("click", () => {
          console.log("rss clicked");
          window.metrical.trackEvent("rss");
        });
      }
    };
  </script>
</footer>
